<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.example.blog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Welcome"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailedPost"
            android:label="Ride Preview"
            android:theme="@style/AppTheme.PopTheme" />
        <activity
            android:name=".Login"
            android:label="@string/app_name" />
        <activity
            android:name=".UserAccount"
            android:label="User Account"
            android:launchMode="standard"/>
        <activity
            android:name=".UserPosts"
            android:label="History"/>
        <activity
            android:name=".MainNavigation"
            android:label="UCSD Rideshare" />
        <activity
            android:name=".RequestForm"
            android:label="Ride Request Form" />
        <activity
            android:name=".SellingForm"
            android:label="Ride Sell Form" />
        <activity
            android:name=".UserProfileSetup"
            android:label="User Profile Setup"
            android:launchMode="standard"/>
        <activity
            android:name=".ListOfSells"
            android:label="Ride Offers List" />
        <activity
            android:name=".ListOfRequests"
            android:label="Ride Requests List" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoadingReqPosts" />
        <activity android:name=".LoadingSellPosts"/>
    </application>


    <!-- Disable animations on debug builds so that the animations do not interfere with Espresso
         tests.  Adding this permission to the manifest is not sufficient - you must also grant the
         permission over adb! -->
    <uses-permission android:name="android.permission.SET_ANIMATION_SCALE" />

</manifest>